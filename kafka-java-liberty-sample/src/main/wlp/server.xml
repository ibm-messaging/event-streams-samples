<server>
    <applicationMonitor updateTrigger="polled" pollingRate="500ms"
                        dropins="dropins" dropinsEnabled="true"/>
                        
    <config updateTrigger="polled" monitorInterval="500ms"/>

    <featureManager>
        <feature>servlet-3.1</feature>
        <feature>appSecurity-2.0</feature>
    </featureManager>

    <httpEndpoint id="defaultHttpEndpoint"
                  host="*"
                  httpPort="9080">
        <tcpOptions soReuseAddr="true"/>
    </httpEndpoint>

    <application name="EventStreamsLibertyApp" context-root="/" location="EventStreamsLibertyApp.war" type="war"/>

</server>
